
<?xml version="1.0" encoding="UTF-8" ?>
<widget xmlns   = "http://www.w3.org/ns/widgets"
    xmlns:gap   = "http://phonegap.com/ns/1.0"
    id          = "com.phonegap.waforapp"
    versionCode = "10"
    version     = "1.0.0" >

	<!-- versionCode is optional and Android only -->

  	<name>WaForApp</name>

  	<description>
      	Wachamo University Forum Application
  	</description>

  	<author href="https://www.facebook.com/gracesoft" email="wuletawwonte@yahoo.com">
      	GraceSoft Web Design
  	</author>

    <preference name="target-device" value="android" />  
	<preference name="fullscreen" value="true" /> 
	<preference name="SplashMaintainAspectRatio" value="true"/>
