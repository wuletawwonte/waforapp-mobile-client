	<icon density="xxhdpi" platform="android" src="./res/icon/android/xxhdpi.png"/>
	<icon density="xxxhdpi" platform="android" src="./res/icon/android/xxxhdpi.png"/>
	<splash density="port-ldpi" platform="android" src="./res/screen/android/splash-port-ldpi.png"/>
	<splash density="port-mdpi" platform="android" src="./res/screen/android/splash-port-mdpi.png"/>
	<splash density="port-hdpi" platform="android" src="./res/screen/android/splash-port-hdpi.png"/>
	<splash density="port-xhdpi" platform="android" src="./res/screen/android/splash-port-xhdpi.png"/>
	<splash density="port-xxhdpi" platform="android" src="./res/screen/android/splash-port-xxhdpi.png"/>
